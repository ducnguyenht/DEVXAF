@model List<NAANSolution_ReactJS.Models.ArticleViewModels>
@{
    ViewBag.Title = "Search";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="col-md-12 nas-search">
    <div class="col-md-12 nas-search-result"><span class="halflings halflings-search nas-lable-search"></span><span style="font-style: italic;">Kết quả tìm kiếm</span> : <span style="color: #344780;">Có <b>@Model.Count</b> kết quả được tìm thấy</span></div>
    @foreach (var item in Model)
    {
        <div class="col-md-12 nas-search-title">
            <h1><a href="/@item.UrlVN">@item.TitleVN</a></h1>
        </div>
        <div class="col-md-12" style="overflow:hidden;">
            <div class="col-md-2">
                <a href="/@item.UrlVN"><img src="@item.ImageAvatarVN" width="100%" title="@item.TitleVN" alt="@item.TitleVN" /></a>
            </div>
            <div class="col-md-10">
                @item.MetaDescriptionVN
            </div>
        </div>
        <hr />
    }
</div>


