<script src="~/Scripts/jquery-1.10.2.min.js"></script>
<script src="~/Scripts/owl-carousel/1.3.2/owl.carousel.min.js"></script>
<script type="text/javascript">
    $(document).ready(function () {
        var homeSlider = $("#nw-slider-home");

        homeSlider.owlCarousel({
            navigation: true,
            singleItem: true,
            slideSpeed:300,
            rewindSpeed:0,
            //  transitionStyle: "fade",
            autoPlay: 3000,
            navigationText: ['<span class="halflings halflings-menu-left"></span>', '<span class="halflings halflings-menu-right"></span>']
        });

        var owl = $(".nw-group-img-carousel");

        owl.owlCarousel({
            items: 4,   
            dots: false,
            slideSpeed: 300,
            rewindSpeed: 0,
            itemsDesktop: [1000, 4],
            itemsDesktopSmall: [900, 3],
            itemsTablet: [600, 2],
            itemsMobile: false,
            autoPlay: 3000,
            navigationText: ['<span class="halflings halflings-menu-left"></span>', '<span class="halflings halflings-menu-right"></span>']
        });
    });


</script>