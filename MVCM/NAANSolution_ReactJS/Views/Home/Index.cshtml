@model NAANSolution_ReactJS.Models.HomeViewModels

@{
    ViewBag.Title = "Giải pháp quản lý khách sạn, phần mềm quản lý doanh nghiệp";
    <link href="~/Scripts/owl-carousel/1.3.2/owl.carousel.css" rel="stylesheet" />
    <link href="~/Scripts/owl-carousel/1.3.2/owl.theme.css" rel="stylesheet" />
    <link href="~/Scripts/owl-carousel/1.3.2/owl.transitions.css" rel="stylesheet" />
}
<div class="col-md-12 nas-col" style="background:rgb(248, 248, 248);">
    <div class="owl-carousel owl-theme " id="nw-slider-home">
        @if (Model != null)
        {
            foreach (var slider in Model.SliderViewModels)
            {
                <div class="item"><a href="@slider.UrlVN"><img src="@slider.ImageUrlVN" title="@slider.TitleVN" alt="@slider.TitleVN" /></a></div>
            }
        }
    </div>
</div>
<div class="col-md-12 nas-col nas-box-product">
    <div id="content">
        <div id="content-left" class="content-left-show">
            <div class="col-md-12">
                <div class="block-title block-title-corner">
                    <h1>PHẦN MỀM NỔI BẬT</h1>
                </div>
            </div>
            <div class="col-md-12 nas-col" style="margin-bottom:5px; overflow:hidden;">
                @if (Model != null)
                {
                    foreach (var featured in Model.FeaturedSoftwareViewModels)
                    {
                        <div class="col-md-6">
                            <a href="@featured.UrlVN">
                                <img src="@featured.ImageAvatarVN" width="100%" title="@featured.TitleVN" alt="@featured.TitleVN" style="padding-top:50px" />
                                <div class="title-pm">
                                    <h4>
                                        @featured.TitleVN
                                    </h4>
                                </div>
                            </a>
                        </div>
                    }
                }
            </div>
            <div class="col-md-12">
                <div class="block-title block-title-corner">
                    <h1>KHO GIAO DIỆN WEB</h1>
                </div>
            </div>
            <div class="nw-group-img-carousel">
                @if (Model != null)
                {
                    foreach (var webInterface in Model.WebInterfaceViewModels)
                    {
                        <div class="nw-item">
                            <img src="@webInterface.ImageUrlVN" />                         
                        </div>
                    }
                }
            </div>

            <div class="col-md-12">
                <div class="block-title block-title-corner">
                    <h1>KHO PHẦN MỀM</h1>
                </div>
            </div>
            <div class="col-md-12 nas-col nas-box-desginweb">
                <div style="margin:30px 0; overflow:hidden;">
                    @if (Model != null)
                    {
                        foreach (var normal in Model.NormalSoftwareViewModels)
                        {
                            <div class="col-md-4 col-sm-6 col-xs-12 nas-item">
                                <div class="nas-box-desginbold"><a href="/@normal.UrlVN"><img src="@normal.ImageAvatarVN" title="@normal.TitleVN" alt="@normal.TitleVN" /></a></div>
                                <h4><a href="/@normal.UrlVN">@normal.TitleVN</a></h4>
                                <p>@normal.MetaDescriptionVN</p>
                            </div>
                        }
                    }
                    <div class="clearfix hidden-lg hidden-md"></div>
                </div>
            </div>
